<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageButton
        android:id="@+id/imgred"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/redicon" />

    <Button
        android:id="@+id/btnabtred"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|center"
        android:background="@drawable/redabouticon"/>

    <Button
        android:id="@+id/btnsettingred"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|right"
        android:background="@drawable/redsettingicon" />

    <Button
        android:id="@+id/btnhomered"
        android:layout_width="110dp"
        android:layout_height="51dp"
        android:layout_gravity="bottom|left"
        android:background="@drawable/redhomeicon" />

    <TextView
        android:id="@+id/txtredabt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:text="@string/redabout"
        android:visibility="invisible" />

</FrameLayout>